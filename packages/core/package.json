{
  "name": "@gen3/core",
  "version": "0.10.29",
  "author": "CTDS",
  "description": "Core module for gen3 frontend. Provides an interface for interacting with the gen3 API and a redux store for managing state.",
  "license": "Apache-2.0",
  "engines": {
    "npm": ">=10.2.3",
    "node": ">=20.11.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "compile": "tsc",
    "clean": "rimraf dist",
    "types": "tsc --emitDeclarationOnly",
    "build": "npm run clean && npm run compile && rollup --config rollup.config.mjs",
    "build:clean": "npm run clean && npm run compile && npm run types && rollup --config rollup.config.mjs",
    "build:watch": "npm run compile && npm run build -- --watch",
    "test": "jest unit",
    "test:watch": "jest unit --watch",
    "test:int": "jest int",
    "test:all": "jest",
    "dev": "npm run build:watch"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "5.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@swc/wasm": "^1.3.85",
    "@testing-library/react": "^14.0.0",
    "@types/estree": "^1.0.0",
    "@types/fastestsmallesttextencoderdecoder": "^1.0.2",
    "@types/flat": "^5.0.3",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jest": "^29.5.12",
    "@types/jsonpath-plus": "5.0.5",
    "@types/lodash": "^4.14.191",
    "@types/papaparse": "^5.3.14",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.36.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.1.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.9.5",
    "flat": "^6.0.1",
    "papaparse": "^5.4.1",
    "react-redux": "^8.1.0",
    "redux-persist": "^6.0.0",
    "uuid": "^9.0.1"
  },
  "files": [
    "dist"
  ]
}
