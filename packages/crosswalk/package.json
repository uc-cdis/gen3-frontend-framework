{
  "name": "@gen3/crosswalk",
  "version": "0.0.1",
  "description": "Crosswalk component for Gen3",
  "author": "craigrbarnes <craigrbarnes@uchicago.edu>",
  "homepage": "https://github.com/uc-cdis/gen3-frontend-framework#readme",
  "license": "Apache-2.0",
  "exports": {
    ".": "./dist/index.js",
    "./*": [
      "./dist/*.js",
      "./dist/*/index.js"
    ],
    "./tailwind": {
      "require": "./dist/tailwind.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uc-cdis/gen3-frontend-framework.git"
  },
  "scripts": {
    "compile": "tsc",
    "clean": "rimraf dist",
    "build": "rollup --config rollup.config.mjs",
    "copy-tailwind": "mkdir -p dist && cp src/tailwind.cjs dist/tailwind.cjs",
    "build:clean": "npm run clean && npm run compile && rollup --config rollup.config.mjs",
    "build:swc": "npm run copy-tailwind && swc src -d dist"
  },
  "bugs": {
    "url": "https://github.com/uc-cdis/gen3-frontend-framework/issues"
  },
  "dependencies": {
    "@gen3/core": "0.1.0"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "jest": "^29.4.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.20.1",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "ts-jest": "^29.0.3",
    "typescript": "^5.1.3",
    "@swc/core": "^1.3.56",
    "rollup-plugin-swc3": "^0.8.1"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mantine/core": "^6.0.4",
    "@mantine/hooks": "^6.0.4"
  }
}
