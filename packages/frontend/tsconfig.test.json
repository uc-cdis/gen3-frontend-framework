{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "test/dts",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declarationMap": true,
    "declaration": true,
    "allowJs": true,
    "module": "nodenext",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "incremental": true,
    "noEmitOnError": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
