{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "incremental": true,
    // "noUnusedLocals": true, // TODO: enable
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
