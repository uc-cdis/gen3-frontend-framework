{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/dts",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "incremental": true,
    "noEmitOnError": true,
    // "noUnusedLocals": true, // TODO: enable
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node",
      "sourceMap": true
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
