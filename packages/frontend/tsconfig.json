{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/dts",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "module": "esnext",

    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "incremental": true,
    "noEmitOnError": true,
    // "noUnusedLocals": true, // TODO: enable
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
