//        "src/features/*"
//      ],
//      "@/lib/*": [
//        "src/lib/*"
//      ],
//      "@/types/*": [
//        "src/types/*"
//      ],
//      "@/utils/*": [
//        "src/utils/*"
//      ],
//      "@/pages/*": [
//        "src/pages/*"
//      ],
//      "@/styles/*": [
//        "src/styles/*"
//      ]
//    },

  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/pages/_app.tsx"
  ]
}
